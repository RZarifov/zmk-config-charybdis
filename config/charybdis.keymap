        };
        */

        combo_lmb {
            timeout-ms = <50>;
            key-positions = <43 44>;  // M + ,
            bindings = <&mkp LCLK>;
        };

        combo_rmb {
            timeout-ms = <50>;
            key-positions = <44 45>;  // , + .
            bindings = <&mkp RCLK>;
        };

        combo_mmb {
            timeout-ms = <50>;
            key-positions = <45 46>;  // . + [
            bindings = <&mkp MCLK>;
        };

        combo_snipe {
            timeout-ms = <50>;
            key-positions = <43 45>;  // M + .
            bindings = <&mo 4>;
        };

        combo_scroll_mode {
            timeout-ms = <50>;
            key-positions = <43 44 45>; // M + , + .
            bindings = <&mo 5>;
        };

        combo_scroll_up {
            timeout-ms = <50>;
            key-positions = <30 45>;  // H + .
            bindings = <&msc SCRL_UP>;
        };

        combo_scroll_down {
            timeout-ms = <50>;
            key-positions = <42 45>;  // N + .
            bindings = <&msc SCRL_DOWN>;
        };

        combo_arrow_down {
            timeout-ms = <50>;
            key-positions = <31 32>;  // J + K
            bindings = <&kp DOWN>;
        };
        
        combo_arrow_left {
            timeout-ms = <50>;
            key-positions = <30 31>;  // H + J
            bindings = <&kp LEFT>;
        };
        
        combo_arrow_right {
            timeout-ms = <50>;
            key-positions = <32 33>;  // K + L
            bindings = <&kp RIGHT>;
        };
        
        combo_arrow_up {
            timeout-ms = <50>;
            key-positions = <19 20>;  // U + I
            bindings = <&kp UP>;
        };
    };

